extends layout

block header
	link(rel="stylesheet", href="css/sidePanel.css")
	link(rel="stylesheet", href="css/add_user.css")
	script(src="scripts/addUser.js")
block content
	ul#sidenav.sidenav.sidenav-fixed
		img.responsive-img(src='images/brand_logo_min.jpg', alt='Brand Logo')
		.divider
		li.hoverable
			.welcomeSection
				h5= adminName
				p= adminEmail
		.divider
		li.hoverable
			a(href='/dashboard') Dashboard
		li.selected
			a(href='/users') Manage students
		if superadmin
			li.hoverable
				a(href='/admins') Manage admins
		li.hoverable
			a(href='/keywords') Manage Keywords
		li.hoverable
			a(href='/documents') Add documents
		li.hoverable
			a(href='/change') Change password
		li.hoverable
			a(href='/logout') Logout
	#content
		nav.hide-on-large-only.white
			.nav-wrapper
				.center
					img.scale-down(src="images/brand_logo_min.jpg" style="max-height: 56px;transform: translateX(-50px);")
					ul.left
						li
							a#sidenav-trigger
								i.material-icons.black-text menu
		.row
			form.form.col.m6.offset-m3.s10.offset-s1.z-depth-3.align-center
				h5.center-align Add Student Form
				.row
					.input-field.col.s10.offset-s1.m10.offset-m1
						input#first_name.validate(type='text')
						label(for='first_name') Students Name
				.row
					.input-field.col.s10.offset-s1.m10.offset-m1
						input#email.validate(type='email')
						label(for='email') Email Id
				.row
					.input-field.col.s10.offset-s1.m10.offset-m1
						input#guide_name.validate(type='text')
						label(for='guide_name') Guide's Name
				.row
					.input-field.col.s10.offset-s1.m10.offset-m1
						input#mentors_email.validate(type='email')
						label(for='mentors_email') Guide's Email Id
				.row
					.input-field.col.s10.offset-s1.m10.offset-m1
						input#research_email.validate(type='text')
						label(for='research_email') Research Faculty Name
				.row
					.input-field.col.s10.offset-s1.m10.offset-m1
						input#phone.validate(type='tel' required pattern="[0-9]{10}")
						label(for='phone') Contact Number
				.row
					.input-field.col.s10.offset-s1.m10.offset-m1
						input#dob.validate.datepicker(type="text")
						label(for='dob') Date of Birth
				.row
					.input-field.col.s10.offset-s1.m10.offset-m1
						input#tenure.validate(type="text" pattern="[0-9]{1,2}")
						label(for='tenure') Tenure(In Months)
				.row(style="display:none;")
					.input-field.col.s10.offset-s1.m10.offset-m1
						select#genderSelect.default
							option(value="Male") Male
							option(value="Female") Female
							option(value="Others") Others
						label Choose your Gender
				.row
					.col.s6.offset-s3.m4.offset-m4
						button.btn.waves-effect.z-index-2 Create Account